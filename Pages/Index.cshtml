@page
@model IndexModel
@{
    ViewData["Title"] = "Password Generator";
}

<div class="text-center">
    <h1 class="display-4">Password Generator</h1>
</div>
<div>
    <form method="post" class="text-center">

        <p>@Model.PasswordText</p>

        <input type="submit" value="submit" autofocus="autofocus" asp-page-handler="submit"/>

    </form>
</div>
